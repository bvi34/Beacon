@model Beacon.Models.Device
@using Beacon.Controllers
@{
    ViewData["Title"] = "Delete Device";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Device
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning!</strong> Are you sure you want to delete this device? This action cannot be undone.
                    </div>

                    <h5>Device Information:</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Hostname:</dt>
                        <dd class="col-sm-9"><strong>@Model.Hostname</strong></dd>

                        <dt class="col-sm-3">IP Address:</dt>
                        <dd class="col-sm-9"><code>@Model.IpAddress</code></dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            @switch (Model.Status)
                            {
                                case DeviceStatus.Online:
                                    <span class="badge bg-success">Online</span>
                                    break;
                                case DeviceStatus.Offline:
                                    <span class="badge bg-danger">Offline</span>
                                    break;
                                case DeviceStatus.Warning:
                                    <span class="badge bg-warning">Warning</span>
                                    break;
                                case DeviceStatus.Critical:
                                    <span class="badge bg-danger">Critical</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">Unknown</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-3">Last Seen:</dt>
                        <dd class="col-sm-9">@Model.LastSeen.ToString("yyyy-MM-dd HH:mm:ss") UTC</dd>

                        <dt class="col-sm-3">Monitored Ports:</dt>
                        <dd class="col-sm-9">@Model.MonitoredPorts.Count</dd>

                        <dt class="col-sm-3">Certificates:</dt>
                        <dd class="col-sm-9">@Model.Certificates.Count</dd>
                    </dl>

                    @if (Model.MonitoredPorts.Any() || Model.Certificates.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <strong>Note:</strong> Deleting this device will also remove all associated monitored ports and certificates.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Device
                        </button>
                    </form>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>